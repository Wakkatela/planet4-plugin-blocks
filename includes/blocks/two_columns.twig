{% block two_columns %}
    {% if ( fields ) %}
        <div class="container">
            <div class="content-two-column-block d-none d-lg-block">
                <div class="row">
                    <div class="col-lg-5 col-xl-5">
                        {% if ( fields.title_1 ) %}
                            <div class="heading">
                                <h2>{{ fields.title_1|e('wp_kses_post')|raw }}</h2>
                            </div>
                        {% endif %}
                      </div>
                    <div class="col-lg-5 offset-lg-1 col-xl-5 offset-xl-1">
                        {% if ( fields.title_2 ) %}
                            <div class="heading">
                                <h2>{{ fields.title_2|e('wp_kses_post')|raw }}</h2>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-xl-5">
                        {% if ( fields.description_1 ) %}
                            <p>{{ fields.description_1|e('wp_kses_post')|raw }}</p>
                        {% endif %}
                    </div>
                    <div class="col-lg-5 offset-lg-1 col-xl-5 offset-xl-1">
                        {% if ( fields.description_2 ) %}
                            <p>{{ fields.description_2|e('wp_kses_post')|raw }}</p>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-5 col-xl-5">
                        {% if ( fields.button_text_1 and fields.button_link_1 ) %}
                            <a href="{{ fields.button_link_1 }}" class="btn btn-secondary">{{ fields.button_text_1 }}</a>
                        {% endif %}
                    </div>
                    <div class="col-lg-5 offset-lg-1 col-xl-5 offset-xl-1">
                        {% if ( fields.button_text_2 and fields.button_link_2 ) %}
                            <a href="{{ fields.button_link_2 }}" class="btn btn-secondary">{{ fields.button_text_2 }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="row content-two-column-block d-lg-none">
                <div class="col-md-12 col-lg-5 col-sm-12 col-xl-5">
                    {% if ( fields.title_1 ) %}
                        <div class="col-lg-10 col-xl-10 heading">
                            <h2>{{ fields.title_1|e('wp_kses_post')|raw }}</h2>
                        </div>
                    {% endif %}
                    {% if ( fields.description_1 ) %}
                        <p>{{ fields.description_1|e('wp_kses_post')|raw }}</p>
                    {% endif %}
                    {% if ( fields.button_text_1 and fields.button_link_1 ) %}
                        <a href="{{ fields.button_link_1 }}" class="btn btn-secondary">{{ fields.button_text_1 }}</a>
                    {% endif %}
                </div>
                <div class="col-md-12 col-lg-5 offset-lg-1 col-sm-12 col-xl-5 offset-xl-1">
                    {% if ( fields.title_2 ) %}
                        <div class="col-lg-10 col-xl-10 heading">
                            <h2>{{ fields.title_2|e('wp_kses_post')|raw }}</h2>
                        </div>
                    {% endif %}
                    {% if ( fields.description_2 ) %}
                        <p>{{ fields.description_2|e('wp_kses_post')|raw }}</p>
                    {% endif %}
                    {% if ( fields.button_text_2 and fields.button_link_2 ) %}
                        <a href="{{ fields.button_link_2 }}" class="btn btn-secondary">{{ fields.button_text_2 }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block happy_point %}
	{% if ( fields ) %}
		{% if ( fields.background_src.0 or fields.opacity ) %}
			<style>
				{% if ( fields.background_src.0 ) %}
					.happy-point-block-wrap {
						background: url({{ fields.background_src.0 }}) center center no-repeat;
					}
				{% endif %}
				{% if ( fields.opacity ) %}
					.happy-point-block-wrap:before {
						opacity: {{ fields.opacity }};
					}
				{% endif %}
			</style>
		{% endif %}
		<div class="happy-point-block-wrap">
			<div class="container">
				<div class="col-md-6 offset-md-6 pt-20">
					{% if ( fields.boxout_title ) %}
						<h2>{{ fields.boxout_title }}</h2>
					{% endif %}
					{% if ( fields.boxout_descr ) %}
						<h5>{{ fields.boxout_descr }}</h5>
					{% endif %}
					{% if ( fields.boxout_link_url and fields.boxout_link_text ) %}
						<a href="{{ fields.boxout_link_url }}" class="btn btn-primary btn-medium subscriber-btn">{{ fields.boxout_link_text }}</a>
					{% endif %}
				</div>
			</div>
		</div>
	{% endif %}
{% endblock %}

{% block content_four_column %}

	<div class="four-coloum-content">
		<div class="container">
			<h2>{{ __( 'Publications', 'planet4-blocks' ) }}</h2>
			{% for post in posts %}

				{% if loop.index0 == 0 %}
					<div class="row">
				{% elseif loop.index0 is divisible by(4) %}
					<div class="row c4-row-hidden" style="display: none;">
				{% endif %}

				<div class="col-md-4 col-lg-3 col-xl-3">
					<div class="four-coloum-content-wrap clearfix">
						<div class="four-coloum-content-info">
							<div class="four-coloum-content-symbol">
								{% if ( post.thumbnail ) %}
									<a href="{{ post.permalink }}">
										<img src="{{ post.thumbnail|raw }}" alt="{{ post.alt_text }}">
									</a>
								{% endif %}
							</div>
							<div class="four-coloum-content-information hidden-xs-down">
								{% if ( post.post_title ) %}
									<h4><a href="{{ post.permalink }}">{{ post.post_title }}</a></h4>
								{% endif %}
								{% if ( post.post_date ) %}
									<p class="publication-date">{{ post.post_date|date('F Y') }}</p>
								{% endif %}
								{% if ( post.post_excerpt ) %}
									<p>{{ post.post_excerpt }}</p>
								{% endif %}
							</div>

						</div>
					</div>
				</div>

				{% if ( (loop.index0 % 4 == 3) or loop.last) %}
					</div>
				{% endif %}

			{% endfor %}

			{% if ( posts|length > 4 ) %}

				<div class="row mt-5 load-more-button-div">
					<div class="col-md-4 col-lg-3 col-xl-3 mb-5">
						<button class="btn btn-block btn-medium btn-small btn-primary content-four-column-load-btn">
							{{ __( 'Load More', 'planet4-blocks' ) }}
						</button>
					</div>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}

{% block submenu %}

	{% if ( menu ) %}
		<div class="submenu-block">

			{% if ( title ) %}
				<h2>{{ title }}</h2>
			{% endif %}
			<ul>
				{% for m in menu %}

					{% if ( m.link ) %}
						<li><a href="#{{ m.id }}">{{ m.text }}</a></li>
					{% else %}
						<li>{{ m.text }}</li>
					{% endif %}
					{% if ( m.children ) %}
						<ul>
							{% for child in m.children %}
								{% if ( child.link ) %}
									<li><a href="#{{ child.id }}">{{ child.text }}</a></li>
								{% else %}
									<li>{{ child.text }}</li>
								{% endif %}
							{% endfor %}
						</ul>
					{% endif %}
				{% endfor %}
			</ul>
		</div>
	{% endif %}

{% endblock %}

{% block subheader %}
	{% if ( fields ) %}
		<div class="subheader">
			<div class="container">
				{% if ( fields.title ) %}
					<h2>{{ fields.title }}</h2>
				{% endif %}
                {% if ( fields.description ) %}
					<p>{{ fields.description|e('wp_kses_post')|raw }}</p>
                {% endif %}
			</div>
		</div>
	{% endif %}
{% endblock %}